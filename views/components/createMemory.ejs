<button
  id="open-create-modal-button"
  class="sticky bottom-[2%] left-[5%] sm:bottom-[5%] bg-blue-600 rounded-lg text-gray-100 p-3 shadow-lg"
>
  Create
</button>

<div
  class="relative z-10 hidden"
  aria-labelledby="modal-title"
  role="dialog"
  aria-modal="true"
  id="modal-create"
>
  <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"></div>

  <div class="fixed inset-0 z-10 w-screen overflow-y-auto">
    <div
      class="flex min-h-full justify-center items-center p-4 text-center sm:items-center sm:p-0"
    >
      <div
        class="relative transform overflow-hidden rounded-lg bg-white text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-lg"
      >
        <div class="bg-white px-4 pb-4 pt-5 sm:p-6 sm:pb-4">
          <div class="flex justify-center">
            <div class="mt-3 text-center sm:mt-0 sm:text-left">
              <h3
                class="text-base font-semibold leading-6 text-gray-900"
                id="modal-title"
              >
                Create memory for this year
              </h3>
              <form
                action="/memories"
                method="POST"
                enctype="multipart/form-data"
                class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6"
              >
                <div class="sm:col-span-full">
                  <label
                    for="title"
                    class="block text-sm font-medium leading-6 text-gray-900"
                    >Title</label
                  >
                  <div class="mt-2">
                    <div
                      class="flex rounded-md shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-600"
                    >
                      <input
                        type="text"
                        name="title"
                        id="title"
                        required
                        autocomplete="title"
                        class="w-full block flex-1 border-0 bg-transparent py-1.5 pl-1 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm"
                        placeholder="My best year"
                      />
                    </div>
                  </div>
                </div>

                <div class="col-span-full">
                  <label
                    for="content"
                    class="block text-sm font-medium leading-6 text-gray-900"
                    >Description</label
                  >
                  <div class="mt-2">
                    <textarea
                      id="content"
                      name="content"
                      rows="3"
                      required
                      class="block w-full rounded-md border-0 py-1.5 px-1 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"
                    ></textarea>
                  </div>
                </div>

                <div class="col-span-full">
                  <label
                    for="input-file-create"
                    class="block text-sm font-medium leading-6 text-gray-900"
                    >Photo</label
                  >
                  <input
                    type="file"
                    name="file"
                    class="hidden"
                    id="input-file-create"
                    accept="image/*"
                    required
                  />
                  <img
                    id="file-upload-create"
                    src="#"
                    alt="your image"
                    class="hidden rounded-xl"
                  />
                  <div class="mt-2 flex items-center gap-x-3">
                    <button
                      id="button-upload-image-create"
                      type="button"
                      class="rounded-md bg-white px-2.5 py-1.5 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50"
                    >
                      Change
                    </button>
                  </div>
                </div>

                <div class="col-span-full flex justify-between">
                  <button
                    id="close-create-modal-button"
                    type="button"
                    class="bg-red-400 p-3 rounded-lg shadow-lg"
                  >
                    Close
                  </button>
                  <button
                    type="Submit"
                    class="bg-blue-400 p-3 rounded-lg shadow-lg"
                    id="button-create-modal-memory"
                  >
                    Create
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="module" src="./js/components/modalCreate.js"></script>
